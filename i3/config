bindsym $mod+c       split v
bindsym $mod+b       layout toggle split

bindsym $mod+q       kill
bindsym $mod+d       exec --no-startup-id "rofi -show run"
bindsym $mod+Shift+d exec --no-startup-id "rofi -show window"

bindsym $mod+Shift+space focus mode_toggle
bindsym $mod+space       floating toggle

# multimedia keys
bindsym XF86KbdBrightnessUp   exec "kb-light + 1"
bindsym XF86KbdBrightnessDown exec "kb-light - 1"

bindsym XF86AudioRaiseVolume  exec "dunsted-volume up"
bindsym XF86AudioLowerVolume  exec "dunsted-volume down"
bindsym XF86AudioMute         exec "dunsted-volume mute"

bindsym XF86MonBrightnessDown exec "xbacklight -10"
bindsym XF86MonBrightnessUp   exec "xbacklight +10"

bindsym XF86TouchpadToggle    exec switch_touchpad
bindsym Print                 exec "scrot /home/mechetel/Pictures/%Y-%m-%d-%T-screenshot.png"
